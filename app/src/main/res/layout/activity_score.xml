<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Votre score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_score"
        android:autoText="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:text="XX mouvements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_score"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="XXX secondes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_time"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="25sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center" />

    <TextView
        android:text="Classement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_bestScore"
        android:textSize="35sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/bestScoreList"
        android:text="test"
        />

    <Button
        android:text="REJOUER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_replay"
        style="@android:style/Widget.Material.Button.Colored"
        android:background="@android:color/holo_green_dark"
        android:textSize="19sp" />

    <Button
        android:text="CHANGER DE GRILLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_changeGrid"
        android:layout_marginTop="20dp"
        style="@android:style/Widget.Material.Button.Colored"
        android:background="@color/colorAccent"
        android:textSize="19sp" />

</LinearLayout>